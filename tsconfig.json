{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS", 
    "resolveJsonModule": true,
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true, 
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "esModuleInterop": true,
    "declaration": true,  
    "paths": {
      "@": [
        "./src"
      ],
      "@app": [
        "./src/app"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@db": [
        "./src/db"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@di": [
        "./src/di"
      ],
      "@extensions/*": [
        "./src/extensions/*"
      ],
      "@helpers": [
        "./src/helpers"
      ],
      "@logger": [
        "./src/logger"
      ],
      "@messages/*": [
        "./src/messages/*"
      ],
      "@middleware": [
        "./src/middleware"
      ],
      "@responses/*": [
        "./src/responses/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@support/*": [
        "./src/support/*"
      ],
      "@typings": [
        "./src/types"
      ],
      "@typings/*": [
        "./src/types/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@validators/*": [
        "./src/validators/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/"
  ]
}